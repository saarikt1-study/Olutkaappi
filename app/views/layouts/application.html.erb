<!DOCTYPE html>
<html>
<head>
  <title>Olutkaappi</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

	<% flash.each do |name, message| %>
		<div id="Flash_<%= name %>">
			<%= message %>
		</div>
	<% end %>


    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "olutkaappi", '#', id: "logo" %>
          <nav>
            <ul class="nav pull-right">
              <li><%= link_to "Koti",    '#' %></li>
              <li><%= link_to "Haku",    '#' %></li>
              <li><%= link_to "Olutsivu", '#' %></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>

</body>
</html>
