<h1>Haku</h1>
<div class="row-fluid">
    <div class="span6">
        <form>
            <fieldset>
                <input type="text" placeholder="Kirjoita hakusanat">
                <button type="submit" class="btn">Hae</button>
            </fieldset>
        </form>

        <%= render 'searchfield' %>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <caption>Hakutulokset</caption>
        <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <th>Nimi</th>
                            <th>Alkoholi</th>
                            <th>Tyyppi</th>
                            <th>Panimo</th>
                            <th>Valmistusmaa</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @results.each do |result| %>
                        <tr>
                            <td><%= result.name%></td>
                            <td><%= result.alc%></td>
                            <td><%= result.beer_type%></td>
                            <td><%= result.brewery%></td>
                            <td><%= result.country%></td>
                        </tr>
                        <% end %>                        
                    </tbody>
                </table>
    </div>
</div>
